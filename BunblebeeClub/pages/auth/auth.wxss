.container {
  padding: 40rpx;
  min-height: 100vh;
  background-color: #fff;
  display: flex;
  flex-direction: column;
}

/* Logo区域样式 */
.logo-section {
  text-align: center;
  margin-bottom: 60rpx;
}

.logo-placeholder {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.slogan {
  font-size: 28rpx;
  color: #666;
}

/* 认证区域样式 */
.auth-section {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 40rpx;
}

.tab-header {
  display: flex;
  border-bottom: 2rpx solid #f0f0f0;
  margin-bottom: 40rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  color: #666;
  padding: 20rpx 0;
  position: relative;
}

.tab-item.active {
  color: #333;
  font-weight: bold;
}

.tab-item.active::after {
  content: "";
  position: absolute;
  bottom: -2rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #ffd700;
  border-radius: 2rpx;
}

/* 表单样式 */
.form-section {
  padding: 0 20rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.form-input {
  width: 100%;
  height: 88rpx;
  background-color: #f5f5f5;
  border-radius: 44rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.code-input-wrap {
  display: flex;
  gap: 20rpx;
}

.code-input-wrap .form-input {
  flex: 1;
}

.code-btn {
  width: 200rpx;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #ffd700;
  color: #333;
  font-size: 24rpx;
  border-radius: 44rpx;
  padding: 0;
}

.code-btn.sent {
  background-color: #f5f5f5;
  color: #999;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #ffd700;
  color: #333;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin-top: 40rpx;
}

/* 用户协议样式 */
.agreement {
  text-align: center;
  margin: 40rpx 0;
  font-size: 24rpx;
  color: #666;
}

.agreement checkbox {
  transform: scale(0.7);
  margin-right: 4rpx;
}

.agreement-link {
  color: #ffd700;
  display: inline;
}

/* 微信登录按钮样式 */
.wechat-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #07c160;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.wechat-icon {
  margin-right: 10rpx;
}
