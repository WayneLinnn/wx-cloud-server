/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  padding: 20rpx;
  background-color: #f5f5f5;
}

/* 轮播图样式 */
.banner {
  width: 100%;
  height: 350rpx;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
}

.banner-item {
  width: 100%;
  height: 100%;
  background-color: #ffd700;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #333;
  font-size: 28rpx;
}

/* 通用区块样式 */
.section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-more {
  font-size: 24rpx;
  color: #999;
}

/* 新闻列表样式 */
.news-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.news-item:last-child {
  border-bottom: none;
}

.news-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.news-title {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.news-date {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}

/* 预订场地按钮样式 */
.booking-button {
  background-color: #ffd700;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(255, 215, 0, 0.2);
}

.booking-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.booking-text {
  flex: 1;
}

.booking-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 4rpx;
}

.booking-desc {
  font-size: 24rpx;
  color: #666;
}

.booking-arrow {
  font-size: 32rpx;
  color: #333;
}

/* 比赛和教练信息行样式 */
.info-row {
  display: flex;
  gap: 20rpx;
}

.matches-section,
.coaches-section {
  flex: 1;
  margin-bottom: 20rpx;
}

/* 比赛信息样式 */
.match-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.match-item:last-child {
  border-bottom: none;
}

.match-content {
  display: flex;
  flex-direction: column;
}

.match-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.match-time {
  font-size: 24rpx;
  color: #999;
}

/* 教练团队样式 */
.coaches-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.coach-item {
  text-align: center;
}

.coach-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  background-color: #f0f0f0;
  margin: 0 auto 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.coach-name {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 4rpx;
}

.coach-title {
  font-size: 24rpx;
  color: #999;
  display: block;
}
