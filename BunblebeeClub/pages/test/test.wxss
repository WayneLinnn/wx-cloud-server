/* pages/test/test.wxss */
.test-container {
  padding: 40rpx;
  min-height: 100vh;
  background-color: #f8f8f8;
}

.test-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 60rpx;
}

.test-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.test-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #ffd700;
  color: #333;
  font-size: 32rpx;
  border-radius: 44rpx;
  border: none;
}

.test-btn::after {
  border: none;
}

.test-tips {
  margin-top: 60rpx;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 12rpx;
}

.test-tips text {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 1.8;
}

.test-tips text:first-child {
  color: #333;
  font-weight: bold;
  margin-bottom: 10rpx;
}
