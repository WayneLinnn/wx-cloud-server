.container {
  padding: 20rpx;
  background-color: #f5f5f5;
}

/* 用户信息卡片样式 */
.user-card {
  background-color: #ffd700;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background-color: #fff;
}

.info-right {
  margin-left: 20rpx;
}

.nickname {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.level {
  font-size: 24rpx;
  color: #333;
  background-color: rgba(255, 255, 255, 0.3);
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.exp-bar {
  background-color: rgba(255, 255, 255, 0.3);
  border-radius: 20rpx;
  height: 40rpx;
  position: relative;
  overflow: hidden;
}

.exp-progress {
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  background-color: rgba(255, 255, 255, 0.8);
  transition: width 0.3s ease;
}

.exp-text {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  font-size: 24rpx;
  color: #333;
  z-index: 1;
}

/* 统计数据样式 */
.stats-section {
  display: flex;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.stat-item {
  flex: 1;
  text-align: center;
  position: relative;
}

.stat-item:not(:last-child)::after {
  content: "";
  position: absolute;
  right: 0;
  top: 20%;
  height: 60%;
  width: 2rpx;
  background-color: #f0f0f0;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 成就系统样式 */
.achievements-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.achievement-progress {
  font-size: 24rpx;
  color: #666;
}

.achievements-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.achievement-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  opacity: 0.6;
}

.achievement-item.unlocked {
  opacity: 1;
}

.achievement-icon {
  width: 80rpx;
  height: 80rpx;
  background-color: #fff;
  border-radius: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
}

.icon-placeholder {
  font-size: 32rpx;
}

.achievement-info {
  flex: 1;
}

.achievement-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 4rpx;
}

.achievement-desc {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 8rpx;
}

.achievement-progress-bar {
  height: 16rpx;
  background-color: #fff;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 4rpx;
}

.achievement-progress-bar .progress {
  height: 100%;
  background-color: #ffd700;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 20rpx;
  color: #999;
}

/* 功能菜单样式 */
.menu-section {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx 20rpx;
  position: relative;
}

.menu-item:not(:last-child)::after {
  content: "";
  position: absolute;
  left: 20rpx;
  right: 20rpx;
  bottom: 0;
  height: 2rpx;
  background-color: #f0f0f0;
}

.menu-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
}

.menu-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.menu-arrow {
  font-size: 24rpx;
  color: #999;
}

/* 未登录提示样式 */
.login-tip {
  text-align: center;
  padding: 40rpx 0;
}

.tip-text {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 20rpx;
}

.login-btn {
  display: inline-block;
  background-color: #ffd700;
  color: #333;
  font-size: 28rpx;
  padding: 0 60rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
}
